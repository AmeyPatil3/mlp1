{
  "name": "mindlink-backend",
  "description": "Backend API for MindLink - Anonymous Mental Health Support Platform",
  "repository": "https://github.com/yourusername/mindlink",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["node", "express", "socket.io", "mental-health"],
  "image": "heroku/nodejs",
  "stack": "heroku-20",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Environment",
      "value": "production"
    },
    "MONGODB_URI": {
      "description": "MongoDB connection string",
      "required": true
    },
    "JWT_SECRET": {
      "description": "JWT secret key",
      "required": true
    },
    "FRONTEND_URL": {
      "description": "Frontend URL",
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  }
}

